#FROM registry.access.redhat.com/rhosp13/openstack-heat-engine:latest
FROM undercloud16.ctlplane.localdomain:8787/rhosp-rhel8/openstack-heat-engine:16.0-80

MAINTAINER Nuage OpenStack Engineering opensource@nuagenetworks.net

LABEL name="undercloud16.ctlplane.localdomain:8787/rhosp-rhel8/openstack-heat-engine"
LABEL version="16.0-nuage"
LABEL release=latest


USER root

COPY RPM-GPG-KEY-Nuage /tmp/RPM-GPG-KEY-Nuage
COPY nuage.repo /etc/yum.repos.d/nuage.repo
COPY redhat.repo /etc/yum.repos.d/redhat.repo

RUN yum -y install nuage-openstack-heat nuage-openstack-neutronclient && yum clean all

RUN rm -f /etc/yum.repos.d/nuage.repo

COPY licenses /licenses

USER heat
